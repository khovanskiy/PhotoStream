<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/black">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="8">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/uploadactivity_imageview" android:layout_gravity="center"
            android:adjustViewBounds="true" />
    </FrameLayout>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uploadactivity_commenttext" android:textColor="@android:color/white" android:hint="@string/AddComment"/>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="2" android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploadToAlbum"
            android:id="@+id/uploadactivity_upload" android:layout_gravity="center_horizontal"
            style="@style/LoginButton"/>
    </FrameLayout>
</LinearLayout>