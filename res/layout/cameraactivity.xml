<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white">

    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="ru.example.PhotoStream.Camera.CameraPreview" android:id="@+id/cameraactivity_preview"
          android:layout_gravity="center_horizontal" android:layout_marginTop="0dp" android:layout_weight="0.8"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cameraactivity_filter_spinner" android:layout_gravity="center_horizontal" android:layout_marginTop="50dp"
            android:layout_weight="0.1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сделать снимок"
            android:id="@+id/cameraactivity_takepicture_button" android:layout_gravity="center_horizontal" android:layout_marginTop="50dp"
            android:background="@android:color/holo_orange_dark" android:textColor="@android:color/white"
            android:layout_weight="0.1"/>
</LinearLayout>