<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50dp"
                  android:background="@android:color/holo_orange_dark" android:id="@+id/linearLayout"/>
    <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/albumsactivity_album_list" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    <Space android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/space"/>
</LinearLayout>