<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@android:color/white">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:background="@android:color/holo_orange_dark">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Space
                android:layout_width="20dp"
                android:layout_height="50dp"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:id="@+id/authactivity_button" android:layout_gravity="center_horizontal"
                android:onClick="onLoginClick" android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>