<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:minHeight="100dp" android:layout_margin="3dp"
              android:padding="3dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@android:color/white" android:padding="3dp"
            android:layout_margin="3dp">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:id="@+id/groupbadgeview_title" android:minHeight="35dp"
                android:gravity="center_vertical" android:singleLine="true"
                android:textColor="@android:color/holo_green_dark" android:textSize="20dp" android:padding="3dp"/>
        <GridView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/groupbadgeview_grid" android:numColumns="3"/>
    </LinearLayout>
</FrameLayout>