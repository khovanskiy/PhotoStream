<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_dark">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white">
        <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/streamactivity_photolist"
                android:layout_weight="4"
                android:background="@android:color/white"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="@android:color/white"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:layout_weight="0">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/my_stream"
                    android:id="@+id/streamactivity_my_stream_button"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="onMyStreamClick"
                    android:textColor="@android:color/white"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/my_friends"
                    android:id="@+id/streamactivity_my_friends_button"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="onMyFriendsClick"
                    android:textColor="@android:color/white"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/my_groups"
                    android:id="@+id/streamactivity_my_groups_button"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="onMyGroupsClick"
                    android:textColor="@android:color/white"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
        </LinearLayout>
        <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
    </LinearLayout>
</LinearLayout>