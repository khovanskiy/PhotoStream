<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="8"
                 android:background="@android:color/background_dark">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/photoupload_imageview" android:layout_gravity="center"
            android:adjustViewBounds="true" />
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/photoupload_commenttext" android:textColor="@android:color/black" android:hint="@string/AddComment"
                android:layout_weight="1" android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/uploadToAlbum"
            android:id="@+id/photoupload_upload" android:layout_gravity="center"
            style="@style/LoginButton"/>
    </LinearLayout>
</LinearLayout>