<resources>

    <style name="OKTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/UITabWidget</item>

        <item name="android:actionBarStyle">@style/UIActionBar</item>
        <item name="android:actionButtonStyle">@style/UIActionButton</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionMenuTextAppearance">@style/UIActionBarTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/_0003_back</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/UIActionBar</item>
        <item name="actionButtonStyle">@style/UIActionButton</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextAppearance">@style/UIActionBarTitle</item>
        <item name="homeAsUpIndicator">@drawable/_0003_back</item>
    </style>

    <style name="OKTheme.NoActionBar" parent="OKTheme">
        <item name="android:windowActionBar">false</item>
        <!-- Support library compatibility -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="UIActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/UIActionBarTitle</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
        <item name="icon">@android:color/transparent</item>
        <item name="titleTextStyle">@style/UIActionBarTitle</item>
    </style>

    <style name="UIActionButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:src">@drawable/actionbar_menu</item>
        <item name="android:minWidth">48.0dip</item>
    </style>

    <style name="UIActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">true</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="UITabWidget" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/UIWidgetText</item>
    </style>

    <style name="UIWidgetText"
           parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/tabtextselector</item>
    </style>

